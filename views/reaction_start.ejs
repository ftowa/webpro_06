<!DOCTYPE html>
<html>
<head>
  <title>反射神経ゲーム</title>
  <script>
    let timer;

    function startGame() {
      const delay = Math.random() * 3000 + 2000; // 2〜5秒の遅延
      document.getElementById("message").textContent = "準備中...";
      timer = setTimeout(() => {
        document.getElementById("message").textContent = "クリック！";
        document.getElementById("reactionButton").disabled = false;
        window.startTime = Date.now();
      }, delay);
    }

    function recordReaction() {
      const reactionTime = Date.now() - window.startTime;
      document.getElementById("reactionForm").reactionTime.value = reactionTime;
      document.getElementById("reactionForm").submit();
    }
  </script>
</head>
<body>
  <h1>反射神経ゲーム</h1>
  <p id="message">スタートボタンを押してください。</p>
  <button onclick="startGame()">スタート</button>
  <form id="reactionForm" action="/reaction" method="POST">
    <input type="hidden" name="reactionTime" value="">
    <button id="reactionButton" onclick="recordReaction()" disabled>ここをクリック！</button>
  </form>
</body>
</html>
